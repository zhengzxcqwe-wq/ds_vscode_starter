{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run tests",
      "type": "shell",
      "command": "pytest -q"
    },
    {
      "label": "Format (Black)",
      "type": "shell",
      "command": "black src tests"
    },
    {
      "label": "Lint (Ruff)",
      "type": "shell",
      "command": "ruff check src tests --fix"
    },
    {
      "label": "Run Streamlit",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\python.exe -m streamlit run src\\app\\streamlit_app.py",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "env": {
        "PYTHONPATH": "${workspaceFolder}\\src"
      },
      "problemMatcher": []
    }
  ]
}